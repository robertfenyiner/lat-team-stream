[Unit]
Description=FFmpeg loop broadcaster
After=network-online.target

[Service]
Type=simple
# Ajusta la ruta al script y la lista de reproducci√≥n
# This service assumes the rclone mount is available at /mnt/google
ExecStart=/usr/local/bin/stream.sh /mnt/google/playlist.txt rtmp://localhost:1935/live/stream
Restart=always
RestartSec=5
User=root
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=ffmpeg-stream

[Install]
WantedBy=multi-user.target
